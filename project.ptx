<project
    ptx-version="2"
    xsl="xsl"
    >
  <targets>
    <target
        name="html"
        format="html"
        publication="publication.ptx"
        />
    <target
        name="pdf"
        format="pdf"
        publication="publication.ptx"
        xsl="latex.xsl"
        />
    <target
        name="latex"
        format="latex"
        source="ula.xml"
        publication="publication.ptx"
        output-dir="latex"
        xsl="latex.xsl"
        />
    <target
        name="runestone"
        format="html"
        publication="runestone.ptx"
        />

  </targets>
</project>

